<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/White_01"
    android:orientation="vertical"
    android:theme="@style/Theme.Triplanner.main"
    tools:context=".More">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Maincolor"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/Theme.Triplanner.NoActionBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/drawer_aboutMe" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:background="@android:color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/padding">

        <ImageView
            android:id="@+id/login_im01"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="@dimen/padding_20dp"
            android:contentDescription="@string/action_settings"
            app:srcCompat="@drawable/logo_triplanner" />

        <TableRow
            android:id="@+id/login_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <com.shashipage.triplanner.CircleImgView
                android:id="@+id/google_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="10dp"
                android:contentDescription="@string/desc_google_icon"
                app:srcCompat="@drawable/logo_triplanner" />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/more_b001"
                android:textColor="@android:color/black"
                android:textSize="@dimen/title_2" />

        </TableRow>

        <TableRow
            android:id="@+id/login_Introduction_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin"
            android:layout_marginBottom="@dimen/margin">

            <LinearLayout
                android:id="@+id/gdf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:gravity="start"
                    android:text="@string/login_app"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/title_1" />

                <Button
                    android:id="@+id/login_Introduction_btn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.1"
                    android:background="@drawable/bg_btn"
                    android:gravity="center"
                    android:text="天氣"
                    android:textSize="18sp"
                    android:visibility="invisible" />
            </LinearLayout>

        </TableRow>

        <ScrollView
            android:id="@+id/login_Introduction"
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:layout_marginTop="@dimen/margin"
            android:background="@drawable/bg_side"
            android:padding="@dimen/margin"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/login_Related2"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/subtitle" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/login_people1"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/content" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/login_people3"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/content" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/login_people9"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/content" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</LinearLayout>