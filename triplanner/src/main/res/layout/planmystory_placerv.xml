<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/planmystory_placerv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="end"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/planmystory_edit_place"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/planmystory_edit_place"
            android:textColor="@color/black"
            android:textSize="@dimen/subtitle"
            android:textStyle="bold" />

        <Button
            android:id="@+id/planmystory_edit_placeinformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/None"
            android:gravity="center"
            android:text="@string/planmystory_edit_placeinformation"
            android:textColor="@color/black"
            android:textSize="@dimen/subtitle"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/planmystory_edit_time2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/planmystory_edit_time"
        android:textColor="@color/black"
        android:textSize="@dimen/content" />

    <EditText
        android:id="@+id/planmystory_edit_story2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:autofillHints=""
        android:ellipsize="start"
        android:hint="@string/planmystory_edit_story"
        android:inputType="textMultiLine"
        android:maxLength="500"
        android:textSize="@dimen/content" />

</LinearLayout>